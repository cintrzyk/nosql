<div class="row" style="margin-bottom: 10px">
  <div class="span2">
    <button onclick="history.back();" class="btn">Wstecz</button>
  </div>
</div>

<div class="row">
  <div class="span6">
    <div class="row">
      <div class="span2">
        <img src='https://graph.facebook.com/<%= @friend.facebook_id %>/picture?type=large' alt='foto'>
      </div>
      <div class="span4">
        <h3><a href="<%= @friend.facebook_url %>"><%= image_tag("facebook.png", :border=>0) %></a> <%= @friend.name %> <%= @friend.lastname %></h3>
        <table class="table table-striped">
          <tbody>
          <tr>
            <th>Miejsce pracy:</th>
            <td>
              <% if @friend.work %>
                  <%= @friend.work %>
              <% else %>
                  <span>brak danych</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Płeć:</th>
            <td>
              <% if @friend.gender == "male" %>
                mężczyzna
              <% else %>
                kobieta
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Data urodzenia:</th>
            <td>
              <% if @friend.yob %>
                  <%= @friend.yob %>
              <% else %>
                  <span>brak danych</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Lokalizacja:</th>
            <td>
              <% if @friend.location %>
                  <%= @friend.location %>
              <% else %>
                  <span>brak danych</span>
              <% end %>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="span6">
    <% if @friend.partner %>
        <h4><a href="<%= @friend.partner_facebook_url %>"><%= image_tag("facebook.png", :border=>0) %></a> <%= @friend.partner %> </h4>
        <img src='<%= @friend.partner_photo %>' alt='foto'>
    <% else %>
        <h3>Znajomy do wzięcia!</h3>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <% if @friend.latitude %>
        <h3>Mapka</h3>
        <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?size=500x300&sensor=false&zoom=9&markers=#{ @friend.latitude }%2C#{ @friend.longitude }"%>
    <% end %>
  </div>
</div>

